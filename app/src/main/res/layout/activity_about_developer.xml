<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#CDFAC8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.v7.widget.Toolbar
            android:id="@+id/toolBar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            style="@style/custom_AppTheme.Toolbar">

            <TextView
                android:id="@+id/txtToolbarTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                style="@style/TextAppearance.Widget.Event.Toolbar.Title"
                android:textSize="20sp"
                android:visibility="gone"
                android:text="Contact List"
                android:textColor="#FFFFFF" />

        </android.support.v7.widget.Toolbar>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <TextView
                android:id="@+id/txtAppName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:gravity="center_horizontal"
                android:textSize="48sp"
                android:textColor="#074C29"
                android:text="AyurPulse"
                android:paddingBottom="22dp"
                android:textStyle="bold"
                android:textAllCaps="false"/>

            <!-- Developer Profiles -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="8dp">

                <!-- Developer 1 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    android:background="@drawable/rounded_background"
                    android:padding="10dp">

                    <TextView
                        android:id="@+id/developer1name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:text="Debarghya Chakravarty"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/developer1bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/developer1name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="Android Developer proficient in AR and AI development. Crafting creative solutions by integrating diverse technologies effectively."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="cursive"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="76dp"
                        android:layout_marginEnd="76dp"/>

                    <Button
                        android:id="@+id/github_button1"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/github" />

                    <Button
                        android:id="@+id/linkedin_button1"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/github_button1"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/linkedin" />
                </RelativeLayout>


                <!-- Developer 2 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_background">

                    <TextView
                        android:id="@+id/developer2name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:text="Raktim Bar"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/developer2bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/developer2name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/bio2"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="cursive"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="76dp"
                        android:layout_marginEnd="76dp"/>

                    <Button
                        android:id="@+id/github_button2"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/github" />

                    <Button
                        android:id="@+id/linkedin_button2"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/github_button2"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/linkedin" />
                </RelativeLayout>

                <!-- Developer 3 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_background">

                    <TextView
                        android:id="@+id/developer3name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:text="Supriyo Bose"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/developer3bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/developer3name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/bio3"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="cursive"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="76dp"
                        android:layout_marginEnd="76dp"/>

                    <Button
                        android:id="@+id/github_button3"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/github" />

                    <Button
                        android:id="@+id/linkedin_button3"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/github_button3"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/linkedin" />
                </RelativeLayout>

                <!-- Developer 4 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_background">

                    <TextView
                        android:id="@+id/developer4name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:text="Swathik Majumder"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/developer4bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/developer4name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="@string/bio4"
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="cursive"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="76dp"
                        android:layout_marginEnd="76dp"/>

                    <Button
                        android:id="@+id/github_button4"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/github" />

                    <Button
                        android:id="@+id/linkedin_button4"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/github_button4"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/linkedin" />
                </RelativeLayout>

                <!-- Developer 5 -->
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="8dp"
                    android:layout_marginBottom="8dp"
                    android:background="@drawable/rounded_background">

                    <TextView
                        android:id="@+id/developer5name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="16dp"
                        android:text="Tunir Chakraborty"
                        android:textStyle="bold"
                        android:textSize="18sp"
                        android:paddingTop="10dp"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="16dp"
                        android:textColor="#000" />

                    <TextView
                        android:id="@+id/developer5bio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/developer5name"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:text="Backend developer proficient in Java, Python, PostgreSQL, FastAPI, and Automation, passionate about innovative solutions."
                        android:textSize="14sp"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentStart="true"
                        android:fontFamily="cursive"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:layout_marginRight="76dp"
                        android:layout_marginEnd="76dp"/>

                    <Button
                        android:id="@+id/github_button5"
                        android:layout_width="45dp"
                        android:layout_height="45dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:paddingTop="10dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/github" />

                    <Button
                        android:id="@+id/linkedin_button5"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:layout_alignParentRight="true"
                        android:layout_marginRight="16dp"
                        android:layout_below="@id/github_button5"
                        android:layout_marginTop="8dp"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="16dp"
                        android:background="@drawable/linkedin" />
                </RelativeLayout>

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>






